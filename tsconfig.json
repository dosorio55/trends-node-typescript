{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021", "dom"],
    "moduleResolution": "node",
    "moduleSuffixes": [".ios", ".native", ""],
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts", "node_modules"]
}
